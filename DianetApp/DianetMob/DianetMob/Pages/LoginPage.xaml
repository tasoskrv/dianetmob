<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DianetMob.Pages.LoginPage" Title="Login">
      
  <ContentPage.Content>
    <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand" Margin="20, 50, 20, 50">
      <Entry x:Name="usernameEntry" Placeholder="Username - Enter a valid email" Keyboard="Email" Completed="OnValidateEmail" Text="demo@gmail.com"/>
      <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="true" Text="1"/>      
      <Button Text="Log In" Clicked="OnLoginButtonClicked" />      
    
      <StackLayout Orientation="Horizontal" Margin="0, 20, 0, 0">
          <Label x:Name="Signup" Text="Sign up" HorizontalOptions="CenterAndExpand"/>
          <Label x:Name="ForgotPassword" Text="Forgot Password?" HorizontalOptions="CenterAndExpand"/> 
      </StackLayout>
      
      <Label x:Name="MessageLabel" TextColor="Red" Margin="0, 50, 0, 0" HorizontalOptions="CenterAndExpand"/>          
      
    </StackLayout>
  </ContentPage.Content>
</ContentPage>