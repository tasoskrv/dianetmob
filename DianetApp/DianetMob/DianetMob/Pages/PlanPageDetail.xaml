<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:DianetMob.Converters;assembly=DianetMob"
             x:Class="DianetMob.Pages.PlanPageDetail">

  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="fSaveBtn" Text="Save"  Clicked="OnSavePlanClicked"/>
  </ContentPage.ToolbarItems>  
  
  <ContentPage.Resources>
    <ResourceDictionary>
      <conv:DateConverter x:Key="dateConverter" />
    </ResourceDictionary>
  </ContentPage.Resources>

  <Grid Margin="20,0,0,0" RowSpacing="0">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition Height="45"/>

      <RowDefinition Height="30"/>
      <RowDefinition Height="45"/>
      <RowDefinition Height="50"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>

      <Label Grid.Row="0" Grid.Column="0" Text="Status" />
      <Entry Grid.Row="1" Grid.Column="0" x:Name="fStatus" Text="{Binding Status, Mode=TwoWay}" Keyboard="Numeric" />

      <Label Grid.Row="2" Grid.Column="0" Text="Goal"/>
      <Entry Grid.Row="3" Grid.Column="0" Text="{Binding Goal, Mode=TwoWay}" Keyboard="Numeric"/>
  </Grid>    
       
</ContentPage>