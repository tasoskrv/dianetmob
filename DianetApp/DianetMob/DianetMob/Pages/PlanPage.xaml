<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DianetMob.Pages.PlanPage">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Add"  Clicked="OnAddPlanClicked"/>
  </ContentPage.ToolbarItems>
<!--page not used, CHECK-->
  <StackLayout VerticalOptions="StartAndExpand" >
    <ListView x:Name="ListViewPlans" ItemTapped="OnItemTapped">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal">
              <Label Text="{Binding GoalDate, StringFormat='{0:MMMM dd, yyyy}'}" TextColor="#f35e20" />
              <Label Text="{Binding Goal}" HorizontalOptions="EndAndExpand" TextColor="#503026" />
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>