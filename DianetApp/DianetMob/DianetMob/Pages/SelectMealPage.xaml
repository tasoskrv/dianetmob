<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DianetMob.Pages.SelectMealPage">
  <ContentPage.Content>

    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" >

      <!--<userControls:BindablePicker x:Name="unitPicker" ItemsSource="{Binding units}" SelectedItem="{Binding SelectedUnit, Mode = TwoWay}" SelectedIndexChanged="OnUnitChosen" Title=" Meal Unit "/>-->
      <Picker x:Name="unitPicker" SelectedIndexChanged="OnUnitChosen" Title=" Meal Unit ">
      </Picker>

      <Picker x:Name="counter1Picker" Title="Counter">
      </Picker>
      <Picker x:Name="counter2Picker" Title="Counter">
      </Picker>
      <Button Text="Choose" VerticalOptions="EndAndExpand" Clicked="OnChooseBtnClicked" />
    </StackLayout>

  </ContentPage.Content>
</ContentPage>