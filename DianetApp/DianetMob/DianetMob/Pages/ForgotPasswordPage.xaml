<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DianetMob.Pages.ForgotPasswordPage">
      
  <ContentPage.Content>
    <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand" Margin="20, 30, 20, 50">
      <Image Source="logo1.png"  />           
      <Entry x:Name="emailEntry" Placeholder="Enter your email" Keyboard="Email" Text="taskmetal@hotmail.com"/>
      <Button Text="Send" Clicked="OnMailSendButtonClicked" x:Name="mailSend"/>     
      <Label x:Name="MessageLabel" TextColor="Red" Margin="0, 20, 0, 0" HorizontalOptions="CenterAndExpand" FontSize="Medium"/>                
    </StackLayout>
  </ContentPage.Content>
</ContentPage>