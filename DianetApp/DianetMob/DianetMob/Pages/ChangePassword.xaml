<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DianetMob.Pages.ChangePassword"
             xmlns:iLang="clr-namespace:DianetMob.Utils;assembly=DianetMob"
             Title="{iLang:Translate updatePsd}">

  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="updatePasswordBtn" Text="{iLang:Translate save}" Clicked="OnUpdatePasswordClicked"/>
  </ContentPage.ToolbarItems>
  
    
      
  <ContentPage.Content>
    <ScrollView x:Name="ProfileScrollView1">
      <StackLayout x:Name="ProfileLayout1" Orientation="Vertical">
          <Grid RowSpacing="0" ColumnSpacing="0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="50" />
            </Grid.RowDefinitions> 

            <Entry Grid.Row="0" Grid.Column="0" Placeholder="{iLang:Translate newPsd}" x:Name="newPassword" IsPassword="true"/>
            <Entry Grid.Row="1" Grid.Column="0" Placeholder="{iLang:Translate retypePsd}" x:Name="newPasswordRetype" IsPassword="true"/>
          </Grid>
         
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>

</ContentPage>