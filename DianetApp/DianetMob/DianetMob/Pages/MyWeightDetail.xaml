<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:DianetMob.Converters;assembly=DianetMob"
             x:Class="DianetMob.Pages.MyWeightDetail"
             Title="Εισαγωγή βάρους">

  <ContentPage.Resources>
    <ResourceDictionary>
      <conv:DateConverter x:Key="dateConverter" />
    </ResourceDictionary>
  </ContentPage.Resources>

  <Grid Margin="20,0,0,0" RowSpacing="0">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition Height="45"/>

      <RowDefinition Height="30"/>
      <RowDefinition Height="45"/>
      <RowDefinition Height="50"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>

    <Label Grid.Row="0" Grid.Column="0" Text="Weight Date" />
    <DatePicker Grid.Row="1" Grid.Column="0" x:Name="weightdate" Format="dd/MM/yyyy" MinimumDate="{Binding PropertyMinimumDate}"
                Date="{Binding WeightDate, Mode=TwoWay, Converter={StaticResource dateConverter}}" />

    <Label Grid.Row="2" Grid.Column="0" Text="Weight"/>
    <Entry Grid.Row="3" Grid.Column="0" Text="{Binding WValue, Mode=TwoWay}" Keyboard="Numeric" />
    
    <Button x:Name="fSaveBtn" Grid.Row="5" Grid.Column="0"
            Text="SAVE"
            VerticalOptions="EndAndExpand"
            HorizontalOptions="Center"
            FontSize="Large"
            FontAttributes="Bold"
            Clicked="OnSaveWeightClicked"/>

  </Grid>


