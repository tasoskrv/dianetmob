<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DianetMob.Pages.MyWeight"
             Title="Βάρος">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Add Weight" Clicked="OnAddWeightClicked"/> 
    <ToolbarItem Text="Add Goal" Clicked="OnAddPlanClicked"/> 
  </ContentPage.ToolbarItems>

  <StackLayout>
    <WebView x:Name="webview2" HeightRequest="300" WidthRequest="500" />
           
    <ListView x:Name="ListViewWeight" ItemTapped="OnItemTapped" RowHeight="45">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.ContextActions>
              <MenuItem Text="DELETE" CommandParameter="{Binding .}" Clicked="OnDeleted" />              
            </ViewCell.ContextActions>                        
              <StackLayout Orientation="Vertical" Padding="5">
                <StackLayout Orientation="Horizontal">
                  <Label Text="{Binding WeightDate, StringFormat='{0:MMMM dd, yyyy}'}" HorizontalOptions="Start" TextColor="#503026" FontSize="Medium"/>
                  <Label Text="{Binding WValue}" HorizontalOptions="Start" TextColor="#8B4513" FontSize="Medium"/>                
                </StackLayout>
              </StackLayout>   
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>    
            
  </StackLayout> 

</ContentPage>