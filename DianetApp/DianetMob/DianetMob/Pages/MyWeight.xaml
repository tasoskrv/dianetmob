<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DianetMob.Pages.MyWeight"
             Title="Βάρος">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Add Weight" Clicked="OnAddWeightClicked"/> 
    <ToolbarItem Text="Add Goal" Clicked="OnAddPlanClicked"/> 
  </ContentPage.ToolbarItems>

  <StackLayout>
    <WebView x:Name="webview2" HeightRequest="500" WidthRequest="500" />
           
    <ListView x:Name="ListViewWeight" ItemTapped="OnItemTapped" RowHeight="70">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.ContextActions>
              <MenuItem Text="DELETE" CommandParameter="{Binding .}" Clicked="OnDeleted" />              
            </ViewCell.ContextActions>            
            <StackLayout Orientation="Horizontal" Padding="5">
              <Image Source="alarm.png" />              
              <StackLayout Orientation="Vertical">
                <Label Text="{Binding WeightDate, StringFormat='{0:MMMM dd, yyyy}'}" TextColor="#c3c3c3" />
                <StackLayout Orientation="Horizontal">
                  <Label Text="{Binding WeightDate}" HorizontalOptions="Start" TextColor="#503026" FontSize="Medium"/>
                  <Label Text="{Binding WValue}" HorizontalOptions="Start" TextColor="#503026" FontSize="Medium"/>                
                </StackLayout>
              </StackLayout>                               
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>    
    
    
    
    
    
    
    
    
    
  </StackLayout> 

</ContentPage>