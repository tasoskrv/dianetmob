<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DianetMob.Pages.MyWeight">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text=""  Clicked="OnAddWeightClicked" Icon="plus.png"/>
  </ContentPage.ToolbarItems>

  <StackLayout VerticalOptions="StartAndExpand" >
    <ListView x:Name="ListViewWeights" ItemTapped="OnItemTapped">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal">
              <Label Text="{Binding InsertDate, StringFormat='{0:MMMM dd, yyyy}'}"
                     TextColor="#f35e20" />
              <Label Text="{Binding WValue}"
                     HorizontalOptions="EndAndExpand"
                     TextColor="#503026" />
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>