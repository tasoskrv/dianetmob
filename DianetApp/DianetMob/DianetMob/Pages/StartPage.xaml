<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DianetMob.Pages.StartPage">
  
  <StackLayout VerticalOptions="FillAndExpand">
    <Label Text="Welcome to Dianet!" VerticalOptions="Start" HorizontalTextAlignment="Center" FontSize="Large" FontAttributes="Bold" />
    <Button Text="Already have an account" VerticalOptions="EndAndExpand" HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold" Clicked="OnClickLoginPage"/>
    <Button Text="Sign Up" VerticalOptions="End" HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold" Clicked="OnClickSignUpPage"/>
  </StackLayout >

</ContentPage>