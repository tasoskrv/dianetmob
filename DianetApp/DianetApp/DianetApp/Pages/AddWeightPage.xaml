<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DianetApp.Pages.AddWeightPage"
             Title="Add your Info">
  <ContentPage.Content>
    <StackLayout Padding="5,10">
      <Label TextColor="Navy" FontSize = "20" Text="Insert your weight." />
      <Entry Placeholder="insert.." TextColor="Navy" FontSize="18"/>

      <Label TextColor="Navy" FontSize = "20" Text="Insert your height." />
      <Entry Placeholder="insert.." TextColor="Navy" FontSize="18"/>
      <Label TextColor="Navy" FontSize = "20" Text="" />
      <Label TextColor="Navy" FontSize = "20" Text="Insert your age." />
      <Entry Placeholder="insert.." TextColor="Navy" FontSize="18"/>
      <Label TextColor="Navy" FontSize = "20" Text="" />
      <Label TextColor="Navy" FontSize = "20" Text="" />
      <Button Text="Save" FontSize="24" BorderColor="Navy" />
    </StackLayout>

  </ContentPage.Content>
</ContentPage>