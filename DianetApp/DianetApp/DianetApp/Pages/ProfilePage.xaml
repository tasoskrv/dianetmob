<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:DianetApp.Converters;assembly=DianetApp"
             x:Class="DianetApp.Pages.ProfilePage">
  <ContentPage.Resources>
    <ResourceDictionary>
      <conv:MinusOneConverter x:Key="minusOneConv" />
    </ResourceDictionary>
  </ContentPage.Resources>
  <ContentPage.ToolbarItems>
    <ToolbarItem Text=""  Clicked="OnEditClicked" Icon="edit.png"/>
  </ContentPage.ToolbarItems>


  <Label x:Name="fHelloLabel"
               VerticalOptions="Start"
               HorizontalTextAlignment="Center"
               FontSize="Large"
               FontAttributes="Bold"/>



  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="100" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <!--Grid.RowDefinitions>
      <RowDefinition Height="40" />
    </Grid.RowDefinitions-->

    <!--row1-->
    <Label Grid.Row="0" Grid.Column="0" x:Name="fFirstNameLabel"
               Text="First Name:"
               FontSize="Large"
               FontAttributes="Bold"/>
    <Entry Grid.Row="0" Grid.Column="1" x:Name="fFirstNameEntry" Text="{Binding FirstName, Mode=TwoWay}" Keyboard="Text" HorizontalOptions="FillAndExpand" FontAttributes="Italic" FontSize="20" IsEnabled="False"/>
    <!--row2-->
    <Label Grid.Row="1" Grid.Column="0" x:Name="fSurNameLabel"
               Text="Last Name:"
               FontSize="Large"
               FontAttributes="Bold"/>
    <Entry Grid.Row="1" Grid.Column="1" x:Name="fSurNameEntry" Text="{Binding LastName, Mode=TwoWay}" Keyboard="Text" HorizontalOptions="FillAndExpand" FontAttributes="Italic" FontSize="20" IsEnabled="False"/>
    <!--row3-->
    <Label Grid.Row="2" Grid.Column="0" x:Name="fEmailLabel"
                   Text="Email:"
                   FontSize="Large"
                   FontAttributes="Bold"/>
    <Entry Grid.Row="2" Grid.Column="1" x:Name="fEmailEntry" Text="{Binding Email, Mode=TwoWay}" Keyboard="Email" HorizontalOptions="FillAndExpand" FontAttributes="Italic" FontSize="20" IsEnabled="False"/>
    <!--row4-->
    <Label Grid.Row="3" Grid.Column="0" x:Name="fBirthDateLabel"
                   Text="Birth Date:"
                   FontSize="Large"
                   FontAttributes="Bold"/>
    <DatePicker Grid.Row="3" Grid.Column="1" x:Name="fbirthDatePicker" Date="{Binding Birthdate, Mode=TwoWay}" Format="dd-MM-yyyy" IsEnabled="False" MinimumDate="Jan 01 1900" MaximumDate="Jan 01 2050"/>
    <!--row5-->
    <Label Grid.Row="4" Grid.Column="0" x:Name="fSexLabel"
                   Text="Sex:"
                   FontSize="Large"
                   FontAttributes="Bold"/>
    <Picker Grid.Row="4" Grid.Column="1" x:Name="fSexPicker" Title="Sex" HorizontalOptions="FillAndExpand" IsEnabled="False" SelectedIndex="{Binding Gender, Converter={StaticResource minusOneConv}, Mode=TwoWay}" >
      <Picker.Items>
        <x:String>Male</x:String>
        <x:String>Female</x:String>
      </Picker.Items>
    </Picker>
    <!--row6-->
    <Label Grid.Row="5" Grid.Column="0" x:Name="fHeightLabel"
                   Text="Height:"
                   FontSize="Large"
                   FontAttributes="Bold"/>
    <Picker Grid.Row="5" Grid.Column="1" x:Name="fHeightPicker" Title="Height" HorizontalOptions="FillAndExpand" IsEnabled="False" SelectedIndex="{Binding HeightType, Converter={StaticResource minusOneConv}, Mode=TwoWay}">
      <Picker.Items>
        <x:String>Cm</x:String>
        <x:String>In</x:String>
      </Picker.Items>
    </Picker>
    <Entry Grid.Row="5" Grid.Column="2" x:Name="fHeightEntry" Keyboard="Numeric" HorizontalOptions="FillAndExpand" FontAttributes="Italic" FontSize="20" IsEnabled="False" Text="{Binding Height, Mode=TwoWay}" />
    <!--row7-->
    <Label Grid.Row="6" Grid.Column="0" x:Name="fWristLabel"
               Text="Wrist:"
               FontSize="Large"
               FontAttributes="Bold"/>
    <Entry Grid.Row="6" Grid.Column="1" x:Name="fWristEntry" Keyboard="Numeric" HorizontalOptions="FillAndExpand" FontAttributes="Italic" FontSize="20" IsEnabled="False"/>
    
    
    <Button x:Name="fSaveBtn" Grid.Row="7" Grid.Column="0"
            Text="SAVE"
            VerticalOptions="EndAndExpand"
            HorizontalOptions="Center"
            FontSize="Large"
            FontAttributes="Bold"
            Clicked="OnSaveSettingsClicked"/>
  </Grid>























