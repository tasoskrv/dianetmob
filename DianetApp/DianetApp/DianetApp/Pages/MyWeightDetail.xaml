<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DianetApp.Pages.MyWeightDetail">
  <StackLayout VerticalOptions="StartAndExpand" >
    <Label Text="Track your weight..." HorizontalOptions="Center" FontSize="30" FontAttributes="Bold"/>
    <Label Text="" FontSize="10"/>

    <Label Text="Today" FontSize="Large" FontAttributes="Bold"/>
    <DatePicker x:Name="fWeightDate" Date="{Binding InsertDate, Mode=TwoWay}" Format="dd-MM-yyyy" IsEnabled="false" />

    <Label Text="Weight" FontSize="Large" FontAttributes="Bold"/>
    <Entry x:Name="fMyWeightEntry"
           Text="{Binding WValue, Mode=TwoWay}"
           Keyboard="Numeric"
           VerticalOptions="StartAndExpand"
           Placeholder="Today's weight..."
           FontSize="20"
           FontAttributes="Italic"/>

    <Label Text="" FontSize="30"/>

    <Button x:Name="fSaveBtn"
            Text="SAVE"
            VerticalOptions="EndAndExpand"
            HorizontalOptions="Center"
            FontSize="Large"
            FontAttributes="Bold"
            Clicked="OnSaveWeightClicked"/>
  </StackLayout >
</ContentPage>