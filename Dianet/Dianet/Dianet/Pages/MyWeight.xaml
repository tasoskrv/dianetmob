<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dianet.Pages.MyWeight">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text=""  Clicked="OnAddWeightClicked" Icon="plus.png"/>
  </ContentPage.ToolbarItems>

  <StackLayout VerticalOptions="StartAndExpand" >
    <ListView x:Name="ListViewWeights" ItemTapped="OnItemTapped">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding WValue}" />
          <DetailText Text="{Binding InsertDate}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
  
</ContentPage>