<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dianet.Pages.SignUpPage">
  <ContentPage.Content>
    <StackLayout VerticalOptions="StartAndExpand">
      <Label Text="Name" />
      <Entry x:Name="nameEntry" Keyboard="Text" />
      <Label Text="Surname" />
      <Entry x:Name="surnameEntry" Keyboard="Text" />
      <Label Text="Email" />
      <Entry x:Name="emailEntry" Keyboard="Email"/>      
      <Label Text="Password" />
      <Entry x:Name="passwdEntry" IsPassword="True" Keyboard="Text"/>
      <Label Text="Date of birth" />
      <DatePicker Format="dd-MM-yyyy" MinimumDate="Jan 01 1900" MaximumDate="Jan 01 2050"/> 
      <Button Text="SAVE" Clicked="OnSaveButtonClicked" />
      <Label x:Name="messageLabel" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>